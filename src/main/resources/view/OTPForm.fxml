            <Font name="System Bold" size="20.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Label>
      <Label fx:id="lblResend" layoutX="466.0" layoutY="410.0" onMouseClicked="#resendOtp" style="-fx-font-size: 16px;" text="Resend">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>
      <JFXButton fx:id="btnVerify" layoutX="237.0" layoutY="523.0" onAction="#btnVerifyOnAction" prefHeight="46.0" prefWidth="389.0" style="-fx-background-color: F6F1DE; -fx-border-color: black;" text="Verify">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="14.0" />
         </font>
      </JFXButton>
      <Label fx:id="lblError" layoutX="432.0" layoutY="481.0" prefHeight="18.0" prefWidth="521.0" textAlignment="CENTER" />
      <ImageView fx:id="girl" fitHeight="551.0" fitWidth="473.0" layoutX="733.0" layoutY="143.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/otp-removebg-preview.png" />
         </image>
      </ImageView>
   </children>
</AnchorPane>
