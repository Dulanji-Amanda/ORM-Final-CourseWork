<AnchorPane fx:id="otpPane" prefHeight="750.0" prefWidth="1200.0" style="-fx-background-color: F6F1DE;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.controller.OTPFormController">
   <children>
      <AnchorPane layoutX="40.0" layoutY="27.0" prefHeight="695.0" prefWidth="1120.0" style="-fx-background-color: white; -fx-background-radius: 20;" />
      <ImageView fx:id="imgBack" fitHeight="58.0" fitWidth="58.0" layoutX="64.0" layoutY="46.0" onMouseClicked="#imgBackOnAction" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/backImg.png" />
         </image>
      </ImageView>
      <TextField fx:id="txtOtp1" layoutX="228.0" layoutY="330.0" onKeyReleased="#moveToNextField" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px; -fx-alignment: center;" />
      <TextField fx:id="txtOtp2" layoutX="341.0" layoutY="330.0" onKeyReleased="#moveToNextField" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px; -fx-alignment: center;" />
      <TextField fx:id="txtOtp3" layoutX="457.0" layoutY="330.0" onKeyReleased="#moveToNextField" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px; -fx-alignment: center;" />
      <TextField fx:id="txtOtp4" layoutX="560.0" layoutY="330.0" onKeyReleased="#submitOtpOnEnter" prefHeight="60.0" prefWidth="50.0" style="-fx-font-size: 24px; -fx-alignment: center;" />
